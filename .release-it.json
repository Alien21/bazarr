{
  "git": {
    "requireCleanWorkingDir": false,
    "changelog": "auto-changelog --stdout",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION"
      },
      "out": {
        "file": "VERSION"
      }
    }
  }
}
